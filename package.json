    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.2",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.0.3",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.0.8",
