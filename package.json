    "*.scss": [
      "csscomb --tty-mode",
      "git add"
    ],
    "*.js": [
      "eslint --fix \"{,**,**/**}*.js\"",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git.drupalcode.org/project/gin"
